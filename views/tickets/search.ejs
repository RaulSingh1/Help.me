<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Tickets - Help Desk</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container">
        <h1>Search Tickets</h1>

        <form action="/tickets/search" method="GET" class="search-form">
            <div class="form-group">
                <label for="q">Search by title, description, or creator:</label>
                <input type="text" id="q" name="q" value="<%= typeof query !== 'undefined' ? query : '' %>" placeholder="Enter search term..." required>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn">Search</button>
                <a href="/tickets" class="btn btn-secondary">View All Tickets</a>
            </div>
        </form>

        <% if (typeof query !== 'undefined') { %>
            <h2>Results for: "<%= query %>"</h2>
            
            <% if (tickets.length === 0) { %>
                <p>No tickets found matching your search. Try a different term.</p>
            <% } else { %>
                <p>Found <%= tickets.length %> ticket(s):</p>
                
                <table>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Created By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% tickets.forEach(ticket => { %>
                            <tr>
                                <td><%= ticket.title %></td>
                                <td><%= ticket.priority %></td>
                                <td><%= ticket.status %></td>
                                <td><%= ticket.user ? ticket.user.username : 'Unknown' %></td>
                                <td><a href="/tickets/<%= ticket._id %>">View</a></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %>
        <% } %>
    </div>
</body>
</html>

