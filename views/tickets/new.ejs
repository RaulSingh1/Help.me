<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Ticket - Help Desk</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container">
        <h1>Submit New Ticket</h1>

        <% if (typeof error !== 'undefined') { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>

        <form action="/tickets" method="POST" class="ticket-form">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required placeholder="Brief description of the issue">
            </div>

            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" required rows="6" placeholder="Detailed description of the problem..."></textarea>
            </div>

            <div class="form-group">
                <label for="priority">Priority:</label>
                <select id="priority" name="priority">
                    <option value="low">Low</option>
                    <option value="medium" selected>Medium</option>
                    <option value="high">High</option>
                    <option value="urgent">Urgent</option>
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn">Submit Ticket</button>
                <a href="/tickets" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>

